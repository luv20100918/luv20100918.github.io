---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="ko">
	<head>
		<BaseHead title={title} description={description} pubDate={pubDate} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 20px;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border: 3px solid var(--fq4-border);
				box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.3);
			}
			.prose {
				max-width: 920px;
				margin: 20px auto;
				padding: 16px;
				color: var(--rpg-text-normal);
				/* Classic RPG status window style */
				background: var(--rpg-window-bg);
				background-image: 
					repeating-linear-gradient(
						0deg,
						transparent,
						transparent 1px,
						rgba(0, 0, 0, 0.05) 1px,
						rgba(0, 0, 0, 0.05) 2px
					);
				border: 3px solid var(--rpg-border-outer);
				box-shadow: 
					inset -2px -2px 0 var(--rpg-window-dark),
					inset 2px 2px 0 var(--rpg-window-light),
					0 0 0 1px var(--rpg-border-inner),
					0 0 0 5px var(--rpg-window-dark),
					0 0 0 7px var(--rpg-border-inner),
					0 0 0 9px var(--rpg-border-outer),
					6px 6px 12px rgba(0, 0, 0, 0.6);
				position: relative;
			}
			
			/* RPG window corner decorations */
			.prose::before {
				content: '';
				position: absolute;
				top: 4px;
				left: 4px;
				right: 4px;
				height: 2px;
				background: linear-gradient(
					to right,
					var(--rpg-border-inner) 0%,
					var(--rpg-border-inner) 20%,
					transparent 20%,
					transparent 80%,
					var(--rpg-border-inner) 80%,
					var(--rpg-border-inner) 100%
				);
			}
			
			.prose::after {
				content: '';
				position: absolute;
				bottom: 4px;
				left: 4px;
				right: 4px;
				height: 2px;
				background: linear-gradient(
					to right,
					var(--rpg-window-dark) 0%,
					var(--rpg-window-dark) 20%,
					transparent 20%,
					transparent 80%,
					var(--rpg-window-dark) 80%,
					var(--rpg-window-dark) 100%
				);
			}
			.title {
				margin-bottom: 1.5em;
				padding: 12px;
				text-align: center;
				line-height: 1.2;
				background: var(--rpg-header-bg);
				border: 2px solid var(--rpg-border-outer);
				box-shadow: 
					inset -1px -1px 0 var(--rpg-window-dark),
					inset 1px 1px 0 var(--rpg-border-inner),
					0 2px 4px rgba(0, 0, 0, 0.3);
				position: relative;
			}
			
			/* Title decorations - RPG style */
			.title::before {
				content: '[ ';
				position: absolute;
				left: 8px;
				top: 50%;
				transform: translateY(-50%);
				color: var(--rpg-gold);
				font-size: 20px;
				text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.5);
			}
			
			.title::after {
				content: ' ]';
				position: absolute;
				right: 8px;
				top: 50%;
				transform: translateY(-50%);
				color: var(--rpg-gold);
				font-size: 20px;
				text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.5);
			}
			.title h1 {
				margin: 0 0 0.3em 0;
				background: transparent;
				border: none;
				box-shadow: none;
				padding: 0 40px;
				font-size: 20px;
				color: var(--rpg-text-normal);
				text-shadow: 2px 2px 0 var(--rpg-text-shadow);
				letter-spacing: 1px;
			}
			.title h1::before {
				content: none;
			}
			.date {
				margin-bottom: 0.5em;
				color: var(--rpg-stat-orange);
				font-family: 'Galmuri11', 'NeoDunggeunmo', monospace;
				font-size: 12px;
				text-transform: uppercase;
				letter-spacing: 1px;
				text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.5);
			}
			.last-updated-on {
				font-style: normal;
				font-size: 11px;
				opacity: 0.8;
			}
			.title hr {
				border: none;
				height: 1px;
				background: var(--rpg-border-inner);
				margin: 8px 0 0 0;
				box-shadow: 0 1px 0 var(--rpg-window-dark);
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
