---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Get recent 10 posts for homepage
const recentPosts = posts.slice(0, 10);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero-section {
				background: var(--fq4-highlight);
				padding: 48px 24px;
				text-align: center;
				margin: 20px;
				border: 3px solid var(--fq4-border);
				box-shadow: 
					4px 4px 0 rgba(0, 0, 0, 0.3),
					inset -2px -2px 0 rgba(0, 0, 0, 0.2),
					inset 2px 2px 0 rgba(255, 255, 255, 0.3);
			}

			.hero-title {
				font-size: 32px;
				font-family: 'DotGothic16', 'IBM Plex Mono', monospace;
				text-transform: uppercase;
				letter-spacing: 2px;
				margin: 0 0 16px 0;
				color: var(--fq4-text);
				text-shadow: 2px 2px 0 rgba(255, 255, 255, 0.5);
			}

			.hero-title::before {
				content: "▶ ";
				color: var(--fq4-accent);
			}

			.hero-description {
				font-size: 16px;
				font-family: 'IBM Plex Mono', monospace;
				color: var(--fq4-text);
				margin: 0;
			}

			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 20px auto;
			}

			.section-title {
				font-size: 20px;
				font-family: 'DotGothic16', 'IBM Plex Mono', monospace;
				text-transform: uppercase;
				padding: 12px 16px;
				margin: 20px;
				background: linear-gradient(90deg, var(--fq4-accent) 0%, transparent 50%);
				border-left: 4px solid var(--fq4-accent);
				color: var(--fq4-text);
				letter-spacing: 1px;
			}

			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0 20px;
				padding: 0;
			}

			ul li {
				width: calc(50% - 1rem);
				background: var(--fq4-window);
				border: 2px solid var(--fq4-border);
				box-shadow: 
					3px 3px 0 rgba(0, 0, 0, 0.2),
					inset -1px -1px 0 rgba(0, 0, 0, 0.1),
					inset 1px 1px 0 rgba(255, 255, 255, 0.3);
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}

			ul li:hover {
				transform: translate(-2px, -2px);
				box-shadow: 
					5px 5px 0 rgba(0, 0, 0, 0.3),
					inset -1px -1px 0 rgba(0, 0, 0, 0.1),
					inset 1px 1px 0 rgba(255, 255, 255, 0.3);
			}

			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}

			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
			}

			ul li:first-child img {
				width: 100%;
				height: 300px;
				object-fit: cover;
			}

			ul li:first-child .post-content {
				padding: 20px;
			}

			ul li:first-child .title {
				font-size: 24px;
			}

			ul li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-bottom: 2px solid var(--fq4-border);
			}

			ul li a {
				display: block;
			}

			.post-content {
				padding: 16px;
			}

			.title {
				margin: 0 0 8px 0;
				color: var(--fq4-text);
				line-height: 1.3;
				font-family: 'IBM Plex Mono', monospace;
				font-weight: 600;
				font-size: 16px;
			}

			.date {
				margin: 0;
				color: var(--fq4-text);
				font-family: 'IBM Plex Mono', monospace;
				font-size: 12px;
				opacity: 0.7;
				text-transform: uppercase;
			}

			ul li a:hover .title {
				color: var(--fq4-accent);
			}

			.no-image-placeholder {
				width: 100%;
				height: 200px;
				background: linear-gradient(135deg, var(--fq4-highlight) 0%, var(--fq4-window) 100%);
				display: flex;
				align-items: center;
				justify-content: center;
				border-bottom: 2px solid var(--fq4-border);
				font-family: 'DotGothic16', monospace;
				font-size: 48px;
				color: var(--fq4-accent);
				opacity: 0.3;
			}

			ul li:first-child .no-image-placeholder {
				height: 300px;
				font-size: 72px;
			}

			.view-all-btn {
				display: inline-block;
				margin: 40px 20px;
				padding: 12px 24px;
				background: var(--fq4-accent);
				color: white;
				text-decoration: none;
				font-family: 'IBM Plex Mono', monospace;
				font-size: 14px;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 1px;
				border: 2px solid var(--fq4-border);
				box-shadow: 
					3px 3px 0 rgba(0, 0, 0, 0.3),
					inset -2px -2px 0 rgba(0, 0, 0, 0.2),
					inset 2px 2px 0 rgba(255, 255, 255, 0.3);
				transition: all 0.2s ease;
			}

			.view-all-btn:hover {
				transform: translate(-2px, -2px);
				box-shadow: 
					5px 5px 0 rgba(0, 0, 0, 0.3),
					inset -2px -2px 0 rgba(0, 0, 0, 0.2),
					inset 2px 2px 0 rgba(255, 255, 255, 0.3);
				background: var(--fq4-cyan);
				color: var(--fq4-text);
			}

			.view-all-btn::after {
				content: " →";
			}

			@media (max-width: 720px) {
				main {
					width: 100%;
				}
				
				ul {
					gap: 1.5rem;
					margin: 0 10px;
				}

				ul li {
					width: 100%;
				}

				ul li:first-child {
					margin-bottom: 1.5rem;
				}

				ul li:first-child .title {
					font-size: 20px;
				}

				.hero-section {
					margin: 10px;
					padding: 32px 16px;
				}

				.hero-title {
					font-size: 24px;
				}

				.section-title {
					margin: 10px;
					font-size: 18px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="hero-section">
				<h1 class="hero-title">{SITE_TITLE}</h1>
				<p class="hero-description">{SITE_DESCRIPTION}</p>
			</div>

			<h2 class="section-title">▶ Recent Posts</h2>
			
			<section>
				<ul>
					{
						recentPosts.map((post, index) => (
							<li>
								<a href={`/${post.id}/`}>
									{post.data.heroImage ? (
										<Image 
											width={index === 0 ? 920 : 460} 
											height={index === 0 ? 300 : 200} 
											src={post.data.heroImage} 
											alt={post.data.title}
										/>
									) : (
										<div class="no-image-placeholder">
											◆
										</div>
									)}
									<div class="post-content">
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>

				<a href="/blog-list" class="view-all-btn">
					View All Posts
				</a>
			</section>
		</main>
		<Footer />
	</body>
</html>