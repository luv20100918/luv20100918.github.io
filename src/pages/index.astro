---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Get recent 10 posts for homepage
const recentPosts = posts.slice(0, 10);
---

<!doctype html>
<html lang="ko">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero-section {
				background: var(--rpg-window-bg);
				padding: 32px 24px;
				text-align: center;
				margin: 20px;
				border: 3px solid var(--rpg-border-outer);
				box-shadow: 
					inset -2px -2px 0 var(--rpg-window-dark),
					inset 2px 2px 0 var(--rpg-window-light),
					0 0 0 1px var(--rpg-border-inner),
					4px 4px 8px rgba(0, 0, 0, 0.5);
				position: relative;
			}
			
			.hero-section::before {
				content: 'MAIN QUEST';
				position: absolute;
				top: -10px;
				left: 50%;
				transform: translateX(-50%);
				background: var(--rpg-header-bg);
				padding: 2px 12px;
				color: var(--rpg-gold);
				font-size: 10px;
				border: 1px solid var(--rpg-border-outer);
				text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.5);
				font-family: 'NeoDunggeunmo', monospace;
			}

			.hero-title {
				font-size: 24px;
				font-family: 'NeoDunggeunmo', monospace;
				text-transform: uppercase;
				letter-spacing: 1px;
				margin: 0 0 16px 0;
				color: var(--rpg-text-normal);
				text-shadow: 2px 2px 0 var(--rpg-text-shadow);
			}

			.hero-title::before {
				content: "▶ ";
				color: var(--rpg-gold);
			}

			.hero-description {
				font-size: 14px;
				font-family: 'NeoDunggeunmo', monospace;
				color: var(--rpg-text-normal);
				margin: 0;
				text-shadow: 1px 1px 0 var(--rpg-text-shadow);
			}

			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: 20px auto;
			}

			.section-title {
				font-size: 18px;
				font-family: 'NeoDunggeunmo', monospace;
				text-transform: uppercase;
				padding: 8px 16px;
				margin: 20px;
				background: var(--rpg-header-bg);
				border: 2px solid var(--rpg-border-outer);
				box-shadow: 
					inset -1px -1px 0 var(--rpg-window-dark),
					inset 1px 1px 0 var(--rpg-border-inner);
				color: var(--rpg-text-normal);
				text-shadow: 2px 2px 0 var(--rpg-text-shadow);
				letter-spacing: 1px;
			}

			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0 20px;
				padding: 0;
			}

			ul li {
				width: calc(50% - 1rem);
				background: var(--rpg-window-bg);
				border: 2px solid var(--rpg-border-outer);
				box-shadow: 
					inset -1px -1px 0 var(--rpg-window-dark),
					inset 1px 1px 0 var(--rpg-window-light);
				transition: transform 0.1s ease, box-shadow 0.1s ease;
				position: relative;
			}

			ul li:hover {
				transform: translate(-1px, -1px);
				box-shadow: 
					3px 3px 6px rgba(0, 0, 0, 0.4),
					inset -1px -1px 0 var(--rpg-window-dark),
					inset 1px 1px 0 var(--rpg-window-light);
				border-color: var(--rpg-gold);
			}

			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}

			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
			}

			ul li:first-child img {
				width: 100%;
				height: 300px;
				object-fit: cover;
			}

			ul li:first-child .post-content {
				padding: 20px;
			}

			ul li:first-child .title {
				font-size: 24px;
			}

			ul li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-bottom: 2px solid var(--fq4-border);
			}

			ul li a {
				display: block;
			}

			.post-content {
				padding: 12px;
				position: relative;
			}
			
			/* RPG-style level indicator */
			.post-level {
				position: absolute;
				top: -12px;
				right: 8px;
				background: var(--rpg-header-bg);
				border: 1px solid var(--rpg-border-outer);
				padding: 2px 6px;
				font-size: 10px;
				color: var(--rpg-stat-orange);
				font-family: 'NeoDunggeunmo', monospace;
				text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.5);
				box-shadow: 
					inset -1px -1px 0 var(--rpg-window-dark),
					inset 1px 1px 0 var(--rpg-window-light);
			}

			.title {
				margin: 0 0 8px 0;
				color: var(--rpg-text-normal);
				line-height: 1.3;
				font-family: 'NeoDunggeunmo', monospace;
				font-weight: normal;
				font-size: 14px;
				text-shadow: 1px 1px 0 var(--rpg-text-shadow);
			}

			.date {
				margin: 0;
				color: var(--rpg-stat-orange);
				font-family: 'NeoDunggeunmo', monospace;
				font-size: 11px;
				text-transform: uppercase;
				text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.5);
			}

			ul li a:hover .title {
				color: var(--rpg-gold);
				text-shadow: 
					1px 1px 0 var(--rpg-text-shadow),
					0 0 4px rgba(255, 215, 0, 0.3);
			}

			.no-image-placeholder {
				width: 100%;
				height: 200px;
				background: var(--rpg-window-dark);
				background-image: 
					repeating-linear-gradient(
						45deg,
						transparent,
						transparent 10px,
						rgba(0, 0, 0, 0.1) 10px,
						rgba(0, 0, 0, 0.1) 20px
					);
				display: flex;
				align-items: center;
				justify-content: center;
				border-bottom: 1px solid var(--rpg-border-outer);
				font-family: 'NeoDunggeunmo', monospace;
				font-size: 32px;
				color: var(--rpg-window-mid);
				text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.3);
			}

			ul li:first-child .no-image-placeholder {
				height: 300px;
				font-size: 72px;
			}

			.view-all-btn {
				display: inline-block;
				margin: 40px 20px;
				padding: 12px 24px;
				background: var(--fq4-accent);
				color: white;
				text-decoration: none;
				font-family: 'IBM Plex Mono', monospace;
				font-size: 14px;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 1px;
				border: 2px solid var(--fq4-border);
				box-shadow: 
					3px 3px 0 rgba(0, 0, 0, 0.3),
					inset -2px -2px 0 rgba(0, 0, 0, 0.2),
					inset 2px 2px 0 rgba(255, 255, 255, 0.3);
				transition: all 0.2s ease;
			}

			.view-all-btn:hover {
				transform: translate(-2px, -2px);
				box-shadow: 
					5px 5px 0 rgba(0, 0, 0, 0.3),
					inset -2px -2px 0 rgba(0, 0, 0, 0.2),
					inset 2px 2px 0 rgba(255, 255, 255, 0.3);
				background: var(--fq4-cyan);
				color: var(--fq4-text);
			}

			.view-all-btn::after {
				content: " →";
			}

			@media (max-width: 720px) {
				main {
					width: 100%;
				}
				
				ul {
					gap: 1.5rem;
					margin: 0 10px;
				}

				ul li {
					width: 100%;
				}

				ul li:first-child {
					margin-bottom: 1.5rem;
				}

				ul li:first-child .title {
					font-size: 20px;
				}

				.hero-section {
					margin: 10px;
					padding: 32px 16px;
				}

				.hero-title {
					font-size: 24px;
				}

				.section-title {
					margin: 10px;
					font-size: 18px;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="hero-section">
				<h1 class="hero-title">
					<span class="pixel-icon sword"></span>
					{SITE_TITLE}
					<span class="pixel-icon shield"></span>
				</h1>
				<p class="hero-description">
					<span class="pixel-icon heart"></span>
					{SITE_DESCRIPTION}
					<span class="pixel-icon heart"></span>
				</p>
			</div>

			<h2 class="section-title">
				<span class="pixel-icon star"></span>
				Recent Posts
				<span class="pixel-badge new">HOT</span>
			</h2>
			
			<section>
				<ul>
					{
						recentPosts.map((post, index) => (
							<li>
								<a href={`/${post.id}/`}>
									{post.data.heroImage ? (
										<Image 
											width={index === 0 ? 920 : 460} 
											height={index === 0 ? 300 : 200} 
											src={post.data.heroImage} 
											alt={post.data.title}
										/>
									) : (
										<div class="no-image-placeholder">
											◆
										</div>
									)}
									<div class="post-content">
										<span class="post-level">LV.{99 - index}</span>
										<h4 class="title">
											{post.data.title}
											{index === 0 && <span class="pixel-badge new">NEW</span>}
										</h4>
										<p class="date">
											<span class="pixel-icon coin"></span>
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>

				<a href="/blog-list" class="view-all-btn">
					<span class="pixel-icon chest"></span>
					View All Posts
					<span class="pixel-icon key"></span>
				</a>
			</section>
		</main>
		<Footer />
	</body>
</html>