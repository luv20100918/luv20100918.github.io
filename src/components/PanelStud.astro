---
export interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div class={`panel-stud ${className}`}>
  {title && <h3 class="panel-title">{title}</h3>}
  <slot />
</div>

<style>
  .panel-stud {
    position: relative;
    background-color: var(--fq4-panel-bg);
    border: var(--pixel-border-width) solid var(--fq4-panel-border);
    box-shadow: 
      inset 1px 1px 0 rgba(255, 255, 255, 0.3),
      inset -1px -1px 0 rgba(0, 0, 0, 0.2);
    padding: 16px;
    margin: 8px;
  }

  /* Corner studs */
  .panel-stud::before {
    content: '';
    position: absolute;
    width: var(--panel-stud-size);
    height: var(--panel-stud-size);
    background-color: var(--fq4-panel-border);
    border: var(--pixel-border-width) solid var(--fq4-text-primary);
    top: 3px;
    left: 3px;
    box-shadow: 
      calc(100% - 14px) 0 0 var(--fq4-panel-border),
      0 calc(100% - 14px) 0 var(--fq4-panel-border),
      calc(100% - 14px) calc(100% - 14px) 0 var(--fq4-panel-border);
  }

  .panel-title {
    font-family: var(--pixel-font);
    font-size: 14px;
    color: var(--fq4-text-primary);
    margin: 0 0 12px 0;
    padding-bottom: 4px;
    border-bottom: 1px dotted var(--fq4-text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
  }
</style>